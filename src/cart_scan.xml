<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	
	<context:component-scan base-package="kr.ac.kopo"></context:component-scan>
	
	<bean id="color_default" class="java.lang.String">
		<constructor-arg value="흰색"></constructor-arg>
	</bean>
	
	<bean id="wheel_default" class="java.lang.String">
		<constructor-arg value="육각형"></constructor-arg>
	</bean>
	
	<bean id="type_default" class="java.lang.String">
		<constructor-arg value="테슬라"></constructor-arg>
	</bean>
</beans>
